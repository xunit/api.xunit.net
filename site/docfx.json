{
  "build": {
    "markdownEngineProperties": {
      "markdigExtensions": [
        "attributes",
        "customcontainers",
        "emphasisextras",
        "gridtables"
      ]
    },
    "content": [
      {
        "files": "**/*.yml",
        "src": "../metadata/v3",
        "dest": "v3"
      },
      {
        "files": "**/*.{md,yml}"
      }
    ],
    "theme": [],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "../_site",
    "template": [
      "default",
      "modern",
      "templates/xunit"
    ],
    "globalMetadata": {
      "_appName": "xUnit.net",
      "_appTitle": "xUnit.net",
      "_appFooter": "Copyright &copy; <a href=\"https://dotnetfoundation.org/\">.NET Foundation</a> and Contributors. Content licensed under <a href=\"https://github.com/xunit/api.xunit.net/blob/main/LICENSE\">Apache 2</a>.",
      "_appFaviconPath": "images/logo-128-transparent.png",
      "_disableBreadcrumb": true,
      "_disableNextArticle": true,
      "_disableToc": false,
      "_enableNewTab": true,
      "_enableSearch": true,
      "pdf": false
    },
    "postProcessors": [
      "ExtractSearchIndex"
    ]
  }
}
